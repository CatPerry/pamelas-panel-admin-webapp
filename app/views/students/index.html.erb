<p id="notice"><%= notice %></p>

<h1>Students</h1>
<% @students.each do |student|%>
  <p>
  <%= image_tag student.image %><br>
  <%= "First Name: #{student.first_name}" %><br>
  <%= "Last Name: #{student.last_name}" %><br>
  <%= "Age: #{student.age}" %><br>
  <%= "Education: #{student.education}" %><br>
  </p>

  <%= link_to 'Show', student %>
  <%= link_to 'Edit', edit_student_path(student) %>
  <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %> 
<% end %>

<br>

<%= link_to 'New Student', new_student_path %>
