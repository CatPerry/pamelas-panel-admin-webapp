<h1>ADMIN PAGE</h1>
<h1>FOR CRUDING STUDENTS</h1>

<p>Find me in app/views/pages/student.html.erb</p>


<h1>Students</h1>
<% @students.each do |student|%>
<p>
<%= image_tag student.image %><br>
<%= "First Name: #{student.first_name}" %><br>
<%= "Last Name: #{student.last_name}" %><br>
<%= "Age: #{student.age}" %><br>
<%= "Education: #{student.education}" %><br>
</p>
<% end %>


<p>
  <h1>Add New Students</h1>
  <%= form_with(model: @student, local: true) do |form| %>
    <div class="field">
      <%= form.label :first_name %>
      <%= form.text_field :first_name %>
    </div>

    <div class="field">
      <%= form.label :last_name %>
      <%= form.text_field :last_name %>
    </div>

    <div class="field">
      <%= form.label :age %>
      <%= form.number_field :age %>
    </div>

    <div class="field">
      <%= form.label :education %>
      <%= form.text_field :education %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</p>
